{
	"name": "accountable-vue",
	"version": "0.8.1",
	"license": "GPL-3.0",
	"description": "A Vue app for managing monetary assets.",
	"scripts": {
		"start": "./node_modules/.bin/concurrently -rkn SERVER,APP -s first \"npm run dev:server\" \"npm run dev:client\"",
		"serve": "./node_modules/.bin/vite preview --port 3000 --open",
		"test": "jest",
		"test:watch": "npm run test -- --watch",
		"dev:client": "./node_modules/.bin/vite --open",
		"dev:server": "cd ./server && npm start",
		"prod:server": "NODE_ENV=production node ./server",
		"build": "npm run build:client && npm run build:server",
		"build:server": "cd ./server && npm run build",
		"build:client": "rm -rf ./dist && npm run lint && npm run vue:tsc && npm run vite:build",
		"build:client:quick": "rm -rf ./dist && npm run export-version && npm run vite:build",
		"vue:tsc": "./node_modules/.bin/vue-tsc --noEmit --project tsconfig.prod.json",
		"vite:build": "./node_modules/.bin/vite build",
		"lint": "npm run export-version && npm run lintonly:vue && npm run lintonly:js",
		"lint:fix": "npm run export-version && npm run lintonly:vue -- --fix && npm run lintonly:js -- --fix",
		"lintonly:vue": "./node_modules/.bin/eslint . --ext .vue",
		"lintonly:js": "./node_modules/.bin/eslint . --ext .js,.ts",
		"export-version": "./node_modules/.bin/genversion ./src/version.ts -es && cd server && npm run export-version"
	},
	"type": "module",
	"dependencies": {
		"@averagehelper/job-queue": "^1.0.1",
		"@zip.js/zip.js": "^2.4.4",
		"atob-lite": "^2.0.0",
		"bootstrap": "^5.1.3",
		"btoa-lite": "^1.0.0",
		"crypto-js": "^4.1.1",
		"date-fns": "^2.28.0",
		"dinero.js": "^2.0.0-alpha.8",
		"fuse.js": "^6.4.6",
		"lodash": "^4.17.21",
		"pinia": "^2.0.12",
		"source-map-support": "^0.5.20",
		"superstruct": "^0.15.3",
		"uuid": "^8.3.2",
		"vue": "^3.2.16",
		"vue-i18n": "^9.1.10",
		"vue-router": "^4.0.11",
		"vue-toastification": "^2.0.0-rc.1"
	},
	"devDependencies": {
		"@intlify/vite-plugin-vue-i18n": "^3.4.0",
		"@types/atob-lite": "^2.0.0",
		"@types/btoa-lite": "^1.0.0",
		"@types/crypto-js": "^4.0.2",
		"@types/jest": "^27.0.2",
		"@types/lodash": "^4.14.175",
		"@types/source-map-support": "^0.5.4",
		"@types/uuid": "^8.3.3",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"@vitejs/plugin-vue": "^1.9.3",
		"@vue/eslint-config-typescript": "^9.1.0",
		"autoprefixer": "^10.4.2",
		"concurrently": "^6.4.0",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-strictest": "^0.4.0",
		"eslint-plugin-deprecation": "^1.3.2",
		"eslint-plugin-jest": "^26.5.3",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-unicorn": "^42.0.0",
		"eslint-plugin-vue": "^8.7.1",
		"genversion": "^3.0.2",
		"jest": "^27.3.1",
		"jest-environment-node": "^27.3.1",
		"jest-extended": "^1.1.0",
		"postcss": "^8.4.5",
		"prettier": "^2.6.2",
		"rollup-plugin-analyzer": "^4.0.0",
		"sass": "^1.42.1",
		"sass-mq": "^6.0.0-beta.1",
		"ts-jest": "^27.0.7",
		"typescript": "^4.7.3",
		"vite": "^2.7.12",
		"vite-tsconfig-paths": "^3.3.17",
		"vue-eslint-parser": "^8.0.0",
		"vue-tsc": "^0.31.4"
	}
}
